<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <!-- Parent -->
  <parent>
    <groupId>com.google.code.flex-iframe</groupId>
    <artifactId>examples</artifactId>
    <version>1.4.7-SNAPSHOT</version>
  </parent>

  <!-- Artifact -->
  <groupId>com.google.code.flex-iframe.examples</groupId>
  <artifactId>CallIFrameFunction</artifactId>
  <version>1.4.7-SNAPSHOT</version>
  <packaging>swf</packaging>
  <name>Flex-IFrame :: Examples :: CallIFrameFunction</name>
  <description />

  <!-- Build -->
  <build>
    <plugins>

      <!-- Compile the SWF -->
      <plugin>
        <groupId>org.sonatype.flexmojos</groupId>
        <artifactId>flexmojos-maven-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
            <sourceFile>${project.build.sourceDirectory}/com/google/code/flexiframe/examples/CallIFrameFunction.mxml</sourceFile>
        </configuration>
      </plugin>

      <!-- Create assemblies of the example -->
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
      </plugin>

    </plugins>
  </build>

</project>
